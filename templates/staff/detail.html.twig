{% extends "base.html.twig" %}

{% block body %}
<div class="container-fluid col-md-6 text-center mt-3">
   
   <table class="table table-info">
      <tr>
         <th colspan=2 class="text text-bg-warning">Staff Detail</th>
      </tr>
     
        <tr>
         <th>Name</th>
         <td>{{ staff.staffname }} </td>
      </tr>
      <tr>
         <th>Phone</th>
         <td>{{ staff.staffphone }} </td>
      </tr>
        <tr>
         <th>Address</th>
         <td>{{ staff.staffaddress }} </td>
      </tr>
      <tr>
         <th>Name of Pet</th>
         
         <td>
            {% if staff.pets != null %}
               {% for pet in staff.pets %}
                  <a href="{{ path('view_pet_by_id', {'id' : pet.id })}}">
                     {{ pet.petname }}
                     <br>
                  </a>     
               {% endfor %}  
            {% endif %}
         </td>  
        
      </tr>
      
        
   </table>
</div>
{% endblock %}