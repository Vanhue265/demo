{% extends 'base.html.twig' %}

{% block body %}
<div class="container col-md-6 text-center mt-3">
    <div class="headline">
            <h1>List of Pets</h1>
        </div>
        <h2 class=text-warning>Total pets: {{ pets|length }}</h2>
    <a class="btn btn-primary" href="{{ path('add_pet')}}">Add</a>
    
    <form class="form-group" action="{{ path('search_pet_name') }}" method="post">
        <input class="form-control" type="search" name="keyword" required
        placeholder="Search by pet name">
    </form>
    <br><br>
    
    
         {% for pet in pets %}
             <body>
<style>
@import url('https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&display=swap');
    *{
        padding: 0;
        margin: 0;
    }
    body{
        font-family: 'Open Sans', sans-serif;
        font-size: 14px;
        color: #111;
        line-height: 1.15;
         
    }
    #wrapper{
        max-width: 1170px;
        margin:0 auto;
    }
    .headline{
        text-align: center;
        margin: 40px 0px;
    }
    h1{
        font-size: 18px;
        color: #111;
        padding: 10px 20px;
        text-transform: uppercase;
        border: 1px solid #bebebe;
        display: inline-block;
        color: #555;
        font-weight: 600;
    }
    ul.pets{
        list-style: none;
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
    }
    ul.pets li{
        flex-basis: 25%;
        padding-left: 15px;
        padding-right: 15px;
        box-sizing: border-box;
        margin-bottom: 30px;
    }
    ul.pets li img{
        max-width: 100%;
        height: auto;
    }
    ul.pets li .pet-top{
        position: relative;
        overflow: hidden;
    }
    ul.pets li .pet-top .pet-thumb{
        display: block;
    }
    ul.pets li .pet-top .pet-thumb img{
        display: block;
    }
    ul.pets li:hover .pet-top .pet-thumb img{
        filter: opacity(80%);
    }
    ul.pets li .pet-top a.buy-now{
        text-transform: uppercase;
        text-decoration: none;
        text-align: center;
        display: block;
        background-color: #446084;
        color: #fff;
        padding: 10px 0px;
        position: absolute;
        bottom: -36px;
        width: 100%;
        transition: 0.25s ease-in-out;
        opacity: 0.85;
    }
    ul.pets li:hover a.buy-now{
        bottom: 0px;
    }
    ul.pets li .pet-info{
        padding: 10px 0px;
    }
    ul.pets li .pet-info a{
        display: block;
        text-decoration: none;
    }
    ul.pets li .pet-info a.pet-type{
        font-size: 11px;
        color: #9e9e9e;
        text-transform: uppercase;
        padding: 3px 0px;
    }
    ul.pets li .pet-info a.pet-name{
        color: #334862;
        padding: 3px 0px;

    }
    .btn{
        height:50px;
        width:100px;
        margin: 50px;
    }
</style>
    <div id="wrapper">
        
        <ul class="pets">
            <li>
                <div class="pet-item">
                   <div class="pet-top">
                       <a href="" class="pet-thumb">
                           <img src="{{ pet.petimage }}" alt="" class="">
                       </a>
                       <a href="{{ path('view_pet_by_id', {'id': pet.id })}}" class="buy-now">View pet details</a>
                         {# Mua ngay #}
                   </div>
                   <div class="pet-info">
                        <a href="" class="pet-type">{{ pet.pettype }}</a>
                        <a href="" class="pet-name">{{ pet.petname }}</a>
                        
                   </div>

                </div>
            </li>
            <td class="pet-btn">
            
                    <a class="btn btn-success" href="{{ path('edit_pet', {'id': pet.id })}}">Edit</a>
                    <a class="btn btn-danger" href="{{ path('delete_pet', {'id': pet.id })}}"
                    onclick="return confirm('Are you sure to delete this pet ?');"
                    >
                        Delete
                    </a>
                 </td>
            
        </ul>
    </div>
</body>
             
      
         {% endfor %}
         
        </tbody>
    <table>
    
</div>
{% endblock %}